function theme_service_links_yahoo_buzz_javascript($nid, $url, $title) {
  static $js_added;

  if (!isset($js_added)) {
    drupal_add_js(drupal_get_path('module', 'service_links') .'/service_links.js');
    drupal_add_js(array('serviceLinks' => array('loc' => $_SERVER['HTTP_HOST'])), 'setting');
    $js_added = array();
  }

  $id = 'yahoo-buzz-'. $nid;
  if (!isset($js_added[$id])) {
    drupal_add_js(array('serviceLinks' => array('links' => array($id => array('url' => $url, 'title' => $title)))), 'setting');
    $js_added[$id] = TRUE;
  }

  return '';
}

/**
 * Build an array of all taxonomy terms.
 */
function _service_links_get_terms() {
  $types = array();
  $vocabularies = taxonomy_get_vocabularies();
  foreach ($vocabularies as $vocabulary) {
    $tree = taxonomy_get_tree($vocabulary->vid);
    foreach ($tree as $term) {
      $types[$term->tid] = $term->name;
    }
  }

  return $types;
}

/**
 * Check if the service links should be displayed for the node type/category.
 */
function _service_links_show($node) {
  $links_show = FALSE;

  // First check the node type
  if (in_array($node->type, variable_get('service_links_node_types', array()), TRUE)) {
    return TRUE;
  }

  // Now check the taxonomy terms
  $terms = variable_get('service_links_category_types', array());
  if (module_exists('taxonomy') && count($terms)) {
    foreach ($node->taxonomy as $term) {
      if (in_array($term->tid, $terms, FALSE)) {
        return TRUE;
      }
    }
  }

  return FALSE;
}
